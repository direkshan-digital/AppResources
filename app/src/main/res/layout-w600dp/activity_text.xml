<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.yprabhu.TextActivity">

    <TextView
        android:padding="@dimen/spacing_normal"
        android:visibility="visible"
        android:id="@+id/text_for_fonts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_medium"
        android:layout_alignParentTop="true"
        android:fontFamily="@font/raleway"
        android:text="@string/professor"
        android:textColor="@android:color/black"
        android:autoSizeTextType="uniform"
        app:autoSizeTextType="uniform"
        android:autoSizeMinTextSize="18sp"
        app:autoSizeMinTextSize="18sp"
        android:autoSizeMaxTextSize="28sp"
        app:autoSizeMaxTextSize="28sp"
        android:autoSizeStepGranularity="1sp"
        app:autoSizeStepGranularity="1sp"/>

    <TextView
        android:padding="@dimen/spacing_normal"
        android:visibility="visible"
        android:id="@+id/text_for_autosizing"
        android:layout_below="@id/text_for_fonts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_medium"
        android:fontFamily="@font/opensans"
        android:text="@string/professor"
        android:textColor="@android:color/black"
        android:autoSizeTextType="none"
        app:autoSizeTextType="none"
        android:textSize="48sp" />


    <TextView
        android:padding="@dimen/spacing_normal"
        android:visibility="visible"
        android:id="@+id/text_for_autosizing"
        android:layout_below="@id/text_for_fonts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_medium"
        android:fontFamily="@font/raleway"
        android:text="@string/leela"
        android:textColor="@android:color/black"
        android:autoSizeTextType="uniform"
        app:autoSizeTextType="uniform"
        android:autoSizeMinTextSize="12sp"
        app:autoSizeMinTextSize="12sp"
        android:autoSizeMaxTextSize="18sp"
        app:autoSizeMaxTextSize="18sp"
        android:autoSizeStepGranularity="1sp"
        app:autoSizeStepGranularity="1sp"/>

    <TextView
        android:padding="@dimen/spacing_normal"
        android:visibility="visible"
        android:id="@+id/text_for_resets"
        android:layout_below="@id/text_for_autosizing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_medium"
        android:fontFamily="@font/raleway"
        android:text="@string/eighties_guy"
        android:textColor="@android:color/black"
        android:autoSizeTextType="uniform"
        app:autoSizeTextType="uniform"
        android:autoSizePresetSizes="@array/autosize_text_sizes"
        app:autoSizePresetSizes="@array/autosize_text_sizes"
        />
</LinearLayout>
